<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data
        android:layout_width="7dp"
        android:layout_height="7dp">

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="time"
            type="String" />

        <variable
            name="isMe"
            type="Boolean" />

        <variable
            name="msg"
            type="String" />

    </data>

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!--时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{TextUtils.isEmpty(time)? View.GONE: View.VISIBLE}"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_corner_rect"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@{time}"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="14:29" />
        </LinearLayout>

        <!--isMe气泡布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="@{isMe?View.VISIBLE: View.GONE}">

            <!--聊天气泡容器-->
            <LinearLayout
                android:id="@+id/chatMeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@mipmap/chat_me"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    android:text="@{msg}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="lsjflsdjflksdjlfskdlfjlskjflakslsjflsdjflksdjlfskdlfjlskjflasjdlfkjaslkfdjslakfjlasj" />
            </LinearLayout>

            <!--头像-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:src="@mipmap/ic_launcher_circle" />
        </LinearLayout>


        <!--isYou气泡布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="@{isMe?View.GONE: View.VISIBLE}">
            <!--头像-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="6dp"
                android:src="@mipmap/ic_launcher_circle" />

            <!--聊天气泡容器-->
            <LinearLayout
                android:id="@+id/chatYouLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@mipmap/chat_you"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{msg}"
                    android:textIsSelectable="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="lsjflsdjflksdjlfskdlfjlskjflaksjflasjdlfkjaslkfdjslakfjlasj" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>